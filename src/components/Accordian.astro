<script>
  const accordions = document.querySelectorAll(".accordion");

  const openAccordion = (accordion: Element) => {
    const content: HTMLElement = accordion.querySelector(".accordion__content")!;
    accordion.classList.add("accordion__active");
    content.style.maxHeight = content.scrollHeight + "px";
  };

  const closeAccordion = (accordion: Element) => {
    const content: HTMLElement = accordion.querySelector(".accordion__content")!;
    accordion.classList.remove("accordion__active");
    content.style.maxHeight = '';
  };

  accordions.forEach((accordion) => {
    const title: HTMLElement = accordion.querySelector(".accordion__title")!;
    const umamiEventId = title.getAttribute('data-umami-event')
    const content: HTMLElement = accordion.querySelector(".accordion__content")!;

    title!.onclick = () => {
      if (content!.style.maxHeight) {
      closeAccordion(accordion);
    } else {
      accordions.forEach((accordion) => closeAccordion(accordion));
      openAccordion(accordion);
    }
    window.umami.track(umamiEventId);
    };
  });
</script>